<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="csci3320.defuse.GameActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Timer"
                    android:id="@+id/timerTitle_textView"
                    android:layout_weight="0.07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="01:00:00"
                    android:id="@+id/timerContent_textView"
                    android:layout_weight="0.22" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Remaining"
                    android:id="@+id/roundTitle_textView"
                    android:layout_weight="0.13"
                    android:autoText="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="08/10"
                    android:id="@+id/roundContent_textView"
                    android:layout_weight="0.56" />
            </LinearLayout>

            <TableLayout
                android:layout_width="380dp"
                android:layout_height="284dp"
                android:layout_weight="0.06">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView6"
                        android:layout_column="0"
                        android:background="@drawable/bomb" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView5"
                        android:layout_column="1"
                        android:background="@drawable/h_rope" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView4"
                        android:layout_column="2"
                        android:background="@drawable/h_rope" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView3"
                        android:layout_column="3"
                        android:background="@drawable/corner" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton0"
                        android:layout_column="0" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton1"
                        android:layout_column="1" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton2"
                        android:layout_column="2" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView2"
                        android:layout_column="3"
                        android:background="@drawable/v_rope" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton3"
                        android:layout_column="0" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton4"
                        android:layout_column="1" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton5"
                        android:layout_column="2" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageVie1"
                        android:layout_column="3"
                        android:background="@drawable/v_rope" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton6"
                        android:layout_column="0" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton7"
                        android:layout_column="1" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/mapButton8"
                        android:layout_column="2" />

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/ropeImageView0"
                        android:layout_column="3"
                        android:background="@drawable/half_v_rope"
                        android:nestedScrollingEnabled="false" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:weightSum="1"
                android:layout_weight="1.32">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:background="@drawable/wheel">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drag the first code image from the map"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.29" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_weight="0.59">

                        <Button
                            android:layout_width="95dp"
                            android:layout_height="71dp"
                            android:id="@+id/AnswerButton0" />

                        <Button
                            android:layout_width="95dp"
                            android:layout_height="71dp"
                            android:id="@+id/AnswerButton1" />

                        <Button
                            android:layout_width="95dp"
                            android:layout_height="71dp"
                            android:id="@+id/AnswerButton3" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:id="@+id/homeButton"
                    android:layout_gravity="bottom" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:id="@+id/helpButton"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
