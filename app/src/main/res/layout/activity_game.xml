<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="csci3320.defuse.GameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Timer"
                android:id="@+id/timerTitle_textView"
                android:layout_weight="0.07"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="01:00:00"
                android:id="@+id/timerContent_textView"
                android:layout_weight="0.22"
                android:textSize="18dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Remaining"
                android:id="@+id/roundTitle_textView"
                android:layout_weight="0.13"
                android:autoText="false"
                android:textSize="18dp"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="08/10"
                android:id="@+id/roundContent_textView"
                android:layout_weight="0.56"
                android:textSize="18dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bombaImageView"
                    android:layout_column="0"
                    android:background="@drawable/bomb" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView9"
                    android:layout_column="1"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView8"
                    android:layout_column="2"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView7"
                    android:layout_column="3"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView6"
                    android:layout_column="4"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView5"
                    android:layout_column="5"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView4"
                    android:layout_column="6"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView3"
                    android:layout_column="7"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView2"
                    android:layout_column="8"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView1"
                    android:layout_column="9"
                    android:background="@drawable/rope" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ropeImageView0"
                    android:layout_column="10"
                    android:background="@drawable/rope" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_weight="0.81">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton0"
                    android:layout_column="1" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton1"
                    android:layout_column="2" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton2"
                    android:layout_column="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton3"
                    android:layout_column="1" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton4"
                    android:layout_column="2" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton5"
                    android:layout_column="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton6"
                    android:layout_column="1" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton7"
                    android:layout_column="2" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton8"
                    android:layout_column="3" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:weightSum="1"
            android:background="@drawable/wheel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag the first code image from the map"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="0.59"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/AnswerButton0"
                    android:layout_marginLeft="3dp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/AnswerButton1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/AnswerButton3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/homeButton"
                android:layout_gravity="bottom"
                android:layout_marginRight="80dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:id="@+id/helpButton"
                android:layout_gravity="bottom"
                android:layout_marginLeft="80dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
