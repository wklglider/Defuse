<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Timer"
                android:id="@+id/timerTitle_textView"
                android:layout_weight="0.07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="01:00:00"
                android:id="@+id/timerContent_textView"
                android:layout_weight="0.22" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Remaining"
                android:id="@+id/roundTitle_textView"
                android:layout_weight="0.13"
                android:autoText="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="08/10"
                android:id="@+id/roundContent_textView"
                android:layout_weight="0.56" />
        </LinearLayout>

        <TableLayout
            android:layout_width="380dp"
            android:layout_height="284dp"
            android:layout_weight="0.06">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView"
                    android:layout_column="0"
                    android:background="@drawable/bomb" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView2"
                    android:layout_column="1"
                    android:background="@drawable/h_rope" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView3"
                    android:layout_column="2"
                    android:background="@drawable/h_rope" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView4"
                    android:layout_column="3"
                    android:background="@drawable/corner" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button4"
                    android:layout_column="0" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button5"
                    android:layout_column="1" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button6"
                    android:layout_column="2" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView5"
                    android:layout_column="3"
                    android:background="@drawable/v_rope" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button7"
                    android:layout_column="0" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button8"
                    android:layout_column="1" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button9"
                    android:layout_column="2" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView6"
                    android:layout_column="3"
                    android:background="@drawable/v_rope" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button10"
                    android:layout_column="0" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button11"
                    android:layout_column="1" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/button12"
                    android:layout_column="2" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="71dp"
                    android:id="@+id/imageView7"
                    android:layout_column="3"
                    android:background="@drawable/half_v_rope" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:weightSum="1"
            android:layout_weight="1.32">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:background="@drawable/wheel">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drag the first code image from the map"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.29" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="0.59">

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/button2" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/button3" />

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="71dp"
                        android:id="@+id/button13" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/button"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:id="@+id/button15"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
